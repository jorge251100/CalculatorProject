<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="horizontal"
            >


            <Button
                android:id="@+id/mas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C35431"
                android:text="+"
                android:textSize="24sp"
                app:rippleColor="#8F3C22" />

            <Button
                android:id="@+id/menos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C35431"
                android:text="-"
                android:textSize="34sp"
                app:rippleColor="#8F3C22" />

            <Button
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C35431"
                android:text="/"
                android:textSize="34sp"
                app:rippleColor="#8F3C22" />

            <Button
                android:id="@+id/multiplicacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C35431"
                android:text="*"
                android:textSize="34sp"
                app:rippleColor="#8F3C22" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/uno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#7A7777"
                android:text="1"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/dos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#7A7777"
                android:text="2"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/tres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#7A7777"
                android:text="3"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/raiz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C35431"
                android:text="√"
                android:textSize="34sp"
                app:rippleColor="#8F3C22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cuatro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#7A7777"
                android:text="4"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/cinco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#7A7777"
                android:text="5"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/seis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#7A7777"
                android:text="6"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/exponencial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#C35431"
                android:text="²"
                android:textSize="34sp"
                app:rippleColor="#8F3C22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/siete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#7A7777"
                android:text="7"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/ocho"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#7A7777"
                android:text="8"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/nueve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#7A7777"
                android:text="9"
                android:textSize="34sp"
                app:rippleColor="#454242" />

            <Button
                android:id="@+id/cero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#C35431"
                android:text="0"
                android:textSize="34sp"
                app:rippleColor="#8F3C22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/par"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#D053B0BC"
                android:text="Par"
                android:textSize="25sp"
                app:rippleColor="#D03F757C" />

            <Button
                android:id="@+id/factorial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#D053B0BC"
                android:text="!"
                android:textSize="34sp"
                app:rippleColor="#D03F757C" />

            <Button
                android:id="@+id/primo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#D053B0BC"
                android:text="primo"
                android:textSize="25sp"
                app:rippleColor="#D03F757C" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#D053B0BC"
                android:text="AC"
                android:textSize="34sp"
                app:rippleColor="#D03F757C" />

            <Button
                android:id="@+id/ans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#D053B0BC"
                android:text="ANS"
                android:textSize="30sp"
                app:rippleColor="#D03F757C" />

            <Button
                android:id="@+id/igual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:backgroundTint="#D053B0BC"
                android:text="="
                android:textSize="34sp"
                app:rippleColor="#D03F757C" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>